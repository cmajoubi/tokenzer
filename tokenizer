import nltk
import re

# Sample function to tokenize text relevant to tech context
def tech_tokenizer(text):
    # Regex pattern: Match URLs, code snippets in backticks, numbers, words, and punctuation
    pattern = r"""
        (?P<URL>https?://[^\s]+)             # URLs
        |(?P<CODE>`[^`]+?`)                  # Inline code in backticks
        |(?P<WORD>\b\w[\w\-\./]*\w\b)        # Words (with hyphens, slashes, periods)
        |(?P<NUM>\b\d+\b)                    # Numbers
        |(?P<PUNC>[.,!?;(){}[\]:])           # Punctuation
    """
    # Use NLTK's regexp_tokenize with the custom pattern
    tokens = nltk.regexp_tokenize(text, pattern, flags=re.VERBOSE)
    return tokens

# Example usage
sample_text = """
Python is widely used for web development. Visit https://docs.python.org/3 for docs!
In C++, use `std::vector<int>` for dynamic arrays. Email: user@example.com
"""

tokens = tech_tokenizer(sample_text)
print(tokens)
