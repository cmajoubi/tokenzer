import nltk
from nltk.tokenize import word_tokenize, TreebankWordTokenizer

# Make sure NLTK's 'punkt' data is downloaded
nltk.download('punkt')

medical_text = "Patient presents with BP 130/85. Prescribed 5mg of Lisinopril daily."

# Basic word tokenization
tokens = word_tokenize(medical_text)
print(tokens)
# Output: ['Patient', 'presents', 'with', 'BP', '130/85', '.', 'Prescribed', '5mg', 'of', 'Lisinopril', 'daily', '.']

# Treebank tokenizer (handles more punctuation, abbreviations, contractions)
tokenizer = TreebankWordTokenizer()
treebank_tokens = tokenizer.tokenize(medical_text)
print(treebank_tokens)
# Output: ['Patient', 'presents', 'with', 'BP', '130/85.', 'Prescribed', '5mg', 'of', 'Lisinopril', 'daily', '.']
